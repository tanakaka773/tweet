<div class="contents row">
  <% @remarks.each do |remark| %>
    <div class="content_post" style="background-image: url(<%= remark.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', "/remarks/#{remark.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/remarks/#{remark.id}", method: :delete %>
          </li>
        </ul>
      </div>
      <%= simple_format(remark.text) %>
      <span class="name">
        <%= remark.name %>
      </span>
    </div>
  <% end %>
</div>
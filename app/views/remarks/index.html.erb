<div class="contents row">
  <% @remarks.each do |remark| %>
    <div class="content_post" style="background-image: url(<%= remark.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/remarks/#{remark.id}", method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == remark.user_id %>
            <li>
              <%= link_to '編集', "/remarks/#{remark.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/remarks/#{remark.id}", method: :delete %>
            </li>
          <% end%>
        </ul>
      </div>
      <%= simple_format(remark.text) %>
      <span class="name">
        <a href="/users/<%= remark.user.id %>%">
          <span>投稿者</span><% remark.user.nickname %>
        </a>
      </span>
    </div>
  <% end %>
</div>